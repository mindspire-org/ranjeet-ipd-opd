{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -n FRONTEND,BACKEND,ELECTRON -c cyan,magenta,green \"npm run dev:front\" \"npm run dev:back\" \"npm run dev:electron\"",
    "dev:front": "vite --port 8080 --strictPort --host 127.0.0.1",
    "dev:back": "npm --prefix backend run dev",
    "dev:electron": "wait-on http://127.0.0.1:8080 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:8080 NODE_ENV=development electron ./electron/main.js",
    "build": "vite build",
    "build:front": "vite build",
    "build:backend": "npm --prefix backend run build",
    "make:ico": "node ./scripts/make-ico.mjs",
    "dist:win": "npm run make:ico && npm run build:front && npm run build:backend && electron-builder -w",
    "dist:mac": "npm run build:front && npm run build:backend && electron-builder -m",
    "dist:mac:unsigned": "npm run build:front && npm run build:backend && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -m -p never",
    "dist:mac:unsigned:arm64": "npm run build:front && npm run build:backend && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -m -p never --arm64",
    "dist:mac:unsigned:x64": "npm run build:front && npm run build:backend && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -m -p never --x64",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "jimp": "^0.22.10",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "express": "^5.1.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.548.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.6.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.hospital.suite",
    "productName": "Hospital Suite",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "public/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "server/dist"
      },
      {
        "from": "backend/node_modules",
        "to": "server/node_modules"
      },
      {
        "from": "backend/.env",
        "to": "server/.env"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/hospital_icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/hospital_icon.icns",
      "category": "public.app-category.medical"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/hospital_icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/hospital_icon.ico",
      "uninstallerIcon": "public/hospital_icon.ico"
    }
  }
}
